<h1 align="center">Houses I've Built</h1>

<div class='header nav'>

<h3 align="right">Search by number of rooms: 
<%= form_tag(houses_path, method: :get) do %>
  <%= number_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>
</h3>
</div>

<p></p>
<div class="index_container">
  <% @houses.each do |house| %>
    <div class="index_tile">
    <img class="index_img" src="<%= house.img_url %>" alt="<%= house.name%>">

    <p><%= link_to house.name, house_path(house) %></p>
    </div>
  <% end %>
</div>

